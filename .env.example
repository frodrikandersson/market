# ===========================================
# MARKET PREDICTOR - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# ----- Database -----
# PostgreSQL connection string (Railway, Supabase, or local)
DATABASE_URL="postgresql://user:password@host:5432/market_predictor?schema=public"

# ----- AI/LLM API Keys -----
# DeepSeek API (RECOMMENDED - cheapest & best for sentiment analysis)
# Get your key at: https://platform.deepseek.com
# Cost: ~10x cheaper than Gemini ($0.14/M tokens vs $1.25/M)
# Falls back to Gemini if not set
DEEPSEEK_API_KEY="..."

# ----- AI/LLM API Keys -----
# Google Gemini API (PRIMARY - for testing, generous free tier)
# Get your key at: https://aistudio.google.com/apikey
# Free tier: 60 req/min, 1500 req/day
GEMINI_API_KEY="..."

# Anthropic Claude API (OPTIONAL - not currently used)
# Get your key at: https://console.anthropic.com
ANTHROPIC_API_KEY="sk-ant-api..."

# ----- Stock & News API Keys -----
# NewsAPI.org (https://newsapi.org)
# Free tier: 100 req/day
NEWSAPI_KEY="..."

# YouTube Data API v3 (OPTIONAL - for financial video content)
# Get your key at: https://console.cloud.google.com/apis/credentials
# Free tier: 10,000 quota/day (~300-500 cron runs)
# Enable YouTube Data API v3 in your Google Cloud project
YOUTUBE_API_KEY="..."

# ----- Social Media -----
# Bluesky (REQUIRED for social sentiment tracking)
# Create account at: https://bsky.app/
# Use your Bluesky handle (e.g., yourname.bsky.social) and password
BLUESKY_USERNAME="yourname.bsky.social"
BLUESKY_PASSWORD="your-app-password"

# ----- App Configuration -----
# Base URL for the app
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Cron job secret (generate a random string)
# Used to secure cron endpoints from unauthorized access
CRON_SECRET="your-secret-key-here"

# ----- Notifications -----
# Discord webhook for prediction alerts (optional)
# Create at: Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/..."

# ----- Optional: Railway/Deployment -----
# These are typically set automatically by Railway
# PORT=3000
# NODE_ENV=production
